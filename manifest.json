{
    "manifest_version": 3,
    "name": "GoldBrickCount",
    "version": "1.0",
    "description": "gbf金本统计",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "background": {
        "service_worker": "bg.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://game.granbluefantasy.jp/*",
                "*://waaatanuki.github.io/gbf-app/*",
                "*://waaatanuki.gitee.io/gbf-app/*"
            ],
            "js": ["cs.js"]
        }
    ],

    "action": {
        "default_popup": "popup.html"
    },

    "permissions": ["webRequest", "storage"],
    "host_permissions": [
        "*://game.granbluefantasy.jp/*",
        "*://gbf.game.mbga.jp/*",
        "*://waaatanuki.github.io/gbf-app/*",
        "*://waaatanuki.gitee.io/gbf-app/*"
    ]
}
